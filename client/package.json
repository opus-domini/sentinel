{
  "name": "sentinel-client",
  "private": true,
  "version": "0.4.3",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build && cp public/index.html dist/index.html && cp public/manifest.webmanifest dist/manifest.webmanifest && cp public/sw.js dist/sw.js && mkdir -p dist/icons && cp public/icons/* dist/icons/",
    "preview": "vite preview",
    "test": "npm run test:unit",
    "test:unit": "vitest run --passWithNoTests --exclude \"src/**/*.e2e.test.ts?(x)\"",
    "test:e2e": "vitest run --passWithNoTests --config vitest.e2e.config.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-router": "^1.159.10",
    "@xterm/addon-clipboard": "^0.2.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-serialize": "^0.14.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cron-parser": "^5.5.0",
    "cronstrue": "^3.12.0",
    "lucide-react": "^0.574.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "vite-tsconfig-paths": "^6.1.1"
  },
  "devDependencies": {
    "@tanstack/eslint-config": "^0.4.0",
    "@tanstack/react-devtools": "^0.9.5",
    "@tanstack/react-router-devtools": "^1.159.10",
    "@tanstack/router-plugin": "^1.159.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "shadcn": "^3.8.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "web-vitals": "^5.1.0"
  }
}
